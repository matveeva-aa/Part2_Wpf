<Window x:Class="Task_3_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор курса" Height="450" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Margin="14">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Имя -->
                <RowDefinition Height="Auto"/>
                <!-- Факультет -->
                <RowDefinition Height="Auto"/>
                <!-- Доступные курсы -->
                <RowDefinition Height="*"/>
                <!-- Список курсов -->
                <RowDefinition Height="Auto"/>
                <!-- Форма обучения -->
                <RowDefinition Height="Auto"/>
                <!-- Часы в неделю -->
                <RowDefinition Height="Auto"/>
                <!-- Согласие -->
                <RowDefinition Height="Auto"/>
                <!-- Кнопка -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Имя -->
            <Label Grid.Row="0" Grid.Column="0" Content="Имя студента:" Margin="0,0,8,8" VerticalAlignment="Center"/>
            <TextBox x:Name="NameBox" Grid.Row="0" Grid.Column="1" Margin="0,0,0,8"/>

            <!-- Факультет -->
            <Label Grid.Row="1" Grid.Column="0" Content="Факультет:" Margin="0,0,8,8" VerticalAlignment="Center"/>
            <ComboBox x:Name="FacultyBox" Grid.Row="1" Grid.Column="1" Margin="0,0,0,8"
                  SelectedIndex="0">
                <ComboBoxItem Content="Программирование"/>
                <ComboBoxItem Content="Дизайн"/>
                <ComboBoxItem Content="Менеджмент"/>
            </ComboBox>

            <!-- Доступные курсы -->
            <Label Grid.Row="2" Grid.ColumnSpan="2" Content="Доступные курсы:" Margin="0,0,0,6"/>

            <ListBox x:Name="CoursesList" Grid.Row="3" Grid.ColumnSpan="2"
                 SelectionMode="Extended" Height="160">
                <ListBoxItem Content="Основы C#"/>
                <ListBoxItem Content="WPF"/>
                <ListBoxItem Content="Базы данных"/>
                <ListBoxItem Content="UI/UX основы"/>
                <ListBoxItem Content="Проектный менеджмент"/>
            </ListBox>

            <!-- Форма обучения -->
            <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,8,0,4">
                <TextBlock Text="Форма обучения: " VerticalAlignment="Center" Margin="0,0,8,0"/>
                <RadioButton x:Name="RbFull" GroupName="mode" Content="очно" IsChecked="True" Margin="0,0,12,0"/>
                <RadioButton x:Name="RbPart" GroupName="mode" Content="заочно"/>
            </StackPanel>

            <!-- Часы в неделю -->
            <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,0,0,6">
                <TextBlock Text="Часов в неделю: " VerticalAlignment="Center" Margin="0,0,8,0"/>
                <Slider x:Name="Hours" Minimum="2" Maximum="20" Value="6" TickFrequency="2"
                    IsSnapToTickEnabled="True" Width="220"/>
                <TextBlock Text="{Binding ElementName=Hours, Path=Value, StringFormat=0 ч.}" 
                       Margin="8,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Согласие на обработку -->
            <CheckBox x:Name="ConsentCheck" Grid.Row="6" Grid.ColumnSpan="2"
                  Content="Я согласен на обработку данных" Margin="0,0,0,6"/>

            <!-- Кнопка -->
            <Button Grid.Row="7" Grid.ColumnSpan="2" Height="32" Content="Записаться"
                Click="Enroll_Click"/>
        </Grid>
    </Grid>
</Window>
