<UserControl x:Class="UserControlExample.CircularProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:UserControlExample"
             mc:Ignorable="d"
             d:DesignWidth="100"
             d:DesignHeight="100">

    <Viewbox>
        <Grid Width="100" Height="100">
            <!-- Фон круга -->
            <Ellipse Stroke="LightGray"
                     StrokeThickness="5"
                     Fill="Transparent" />

            <!-- Прогресс -->
            <Path Stroke="Blue"
                  StrokeThickness="5"
                  StrokeStartLineCap="Round"
                  StrokeEndLineCap="Round">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="50,5" IsClosed="False">
                            <ArcSegment x:Name="PART_Arc"
                                        Point="50,5"
                                        Size="45,45"
                                        SweepDirection="Clockwise"
                                        IsLargeArc="False" />
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>

            <!-- Текст с процентом -->
            <TextBlock Text="{Binding PercentageText, RelativeSource={RelativeSource AncestorType=local:CircularProgressBar}}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Bold" />
        </Grid>
    </Viewbox>
</UserControl>
