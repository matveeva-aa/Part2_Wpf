<Window x:Class="Task_2_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Простой текстовый редактор" Height="500" Width="900"
        WindowStartupLocation="CenterScreen"
         Closing="Window_Closing">
    <DockPanel LastChildFill="True">
        <!-- Верхняя панель кнопок -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8" >
            <Button Content="Открыть" Width="110" Margin="0,0,8,0" Click="Open_Click"/>
            <Button Content="Сохранить" Width="110" Margin="0,0,8,0" Click="Save_Click"/>
            <Button Content="О программе" Width="130" Click="About_Click"/>
        </StackPanel>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="StatusText" Text="Готов" />
            </StatusBarItem>
        </StatusBar>

        <ScrollViewer HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto" Margin="8">
            <TextBox x:Name="Editor"
                     AcceptsReturn="True" AcceptsTab="True"
                     TextWrapping="Wrap"
                     FontFamily="Consolas" FontSize="14"
                     VerticalScrollBarVisibility="Disabled"
                     HorizontalScrollBarVisibility="Disabled"/>
        </ScrollViewer>

    </DockPanel>
</Window>
