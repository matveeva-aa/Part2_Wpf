<Window x:Class="Task_1_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Убегающая кнопка" Height="300" Width="500"
        WindowStartupLocation="CenterScreen">
    <Canvas x:Name="Playground" Background="#f0f0f0">
        <Button x:Name="RunButton"
                Content="Поймай меня!"
                Width="120" Height="40"
                Background="OliveDrab" Foreground="White" FontWeight="Bold"
                MouseEnter="RunButton_MouseEnter" Click="RunButton_Click"/>
    </Canvas>
</Window>
