<Window x:Class="Task_1_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Светофор" Height="450" Width="180"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Ellipse x:Name="RedLamp"
                 Grid.Row="0"
                 Width="100" Height="100"
                 Fill="Gray" Stroke="Black" StrokeThickness="1"
                 HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Ellipse x:Name="YellowLamp"
                 Grid.Row="1"
                 Width="100" Height="100"
                 Fill="Gray" Stroke="Black" StrokeThickness="1"
                 HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Ellipse x:Name="GreenLamp"
                 Grid.Row="2"
                 Width="100" Height="100"
                 Fill="Gray" Stroke="Black" StrokeThickness="1"
                 HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button Grid.Row="3"
                Content="Next"
                Width="100" Height="30" Margin="0,12,0,0"
                HorizontalAlignment="Center"
                Click="NextButton_Click"/>
    </Grid>
</Window>
