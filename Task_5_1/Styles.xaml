<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!-- Кисти -->
    <SolidColorBrush x:Key="PrimaryColor"   Color="#2563EB"/>
    <SolidColorBrush x:Key="HoverColor"     Color="#BFDBFE"/>
    <SolidColorBrush x:Key="DisabledColor"  Color="#9CA3AF"/>

    <!-- Размеры -->
    <sys:Double x:Key="ControlHeight">32</sys:Double>
    <sys:Double x:Key="ControlWidth">150</sys:Double>

    <!-- Стиль кнопки -->
    <Style x:Key="BaseButtonStyle" TargetType="Button">
        <Setter Property="Height"     Value="{StaticResource ControlHeight}"/>
        <Setter Property="Width"      Value="{StaticResource ControlWidth}"/>
        <Setter Property="Margin"     Value="5"/>
        <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize"   Value="14"/>
    </Style>

    <!-- Заголовок -->
    <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
        <Setter Property="FontSize"   Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Margin"     Value="0,0,0,10"/>
    </Style>
</ResourceDictionary>