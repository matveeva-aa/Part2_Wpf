<Window x:Class="Task_9_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Task_9_1"
        Title="Color Viewer" Height="350" Width="400">

    <Window.CommandBindings>
        <CommandBinding Command="{x:Static local:CustomCommands.ChangeColor}"
                        Executed="ChangeColorExecuted"
                        CanExecute="ChangeColorCanExecute"/>

        <CommandBinding Command="Undo"
                        Executed="UndoExecuted"
                        CanExecute="UndoCanExecute"/>
    </Window.CommandBindings>

    <DockPanel x:Name="Dock">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Действия">
                <MenuItem Header="Изменить цвет"
                          Command="{x:Static local:CustomCommands.ChangeColor}" />
                <MenuItem Header="Отменить"
                          Command="Undo" />
            </MenuItem>
        </Menu>

        <StackPanel DockPanel.Dock="Bottom"
                    Margin="20"
                    Orientation="Vertical"
                    VerticalAlignment="Bottom">
            <Button Content="Изменить цвет"
                    Height="35"
                    Margin="0,0,0,10"
                    Command="{x:Static local:CustomCommands.ChangeColor}" />
            <Button Content="Отменить"
                    Height="35"
                    Command="Undo" />
        </StackPanel>
        <Grid />
    </DockPanel>
</Window>
